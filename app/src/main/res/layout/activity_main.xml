<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	tools:context=".MainActivity">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>

		<Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="WHAT IS \n GLOBAL WARMING"
			android:textColor="#ffffff"
			android:id="@+id/buttonabout"
			android:layout_alignParentTop="true"
			android:layout_alignParentStart="true"
			android:background="#2fca51"
			android:onClick="onAboutBtn"
			android:textSize="24dp"
			android:layout_marginBottom="10dp"/>

		<Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="HELP AT HOME"
			android:textColor="#ffffff"
			android:id="@+id/buttonhome"
			android:layout_alignParentTop="true"
			android:layout_alignParentStart="true"
			android:background="#2fca51"
			android:onClick="atHomeBtn"
			android:textSize="24dp"
			android:layout_marginBottom="10dp"/>

		<Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="A HARM CHAIN"
			android:textColor="#ffffff"
			android:id="@+id/buttonharm"
			android:layout_alignParentStart="true"
			android:background="#2fca51"
			android:onClick="onHarmBtn"
			android:textSize="24dp"
			android:layout_marginBottom="10dp"/>

		<Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="View Chart"
			android:textColor="#ffffff"
			android:id="@+id/buttonchar"
			android:layout_alignParentTop="true"
			android:layout_alignParentStart="true"
			android:background="#2fca51"
			android:onClick="onChartBtn"
			android:textSize="24dp"
			android:layout_marginBottom="10dp"/>

		<Button
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Show video"
			android:textColor="#ffffff"
			android:id="@+id/buttonvideo"
			android:layout_alignParentTop="true"
			android:layout_alignParentStart="true"
			android:background="#2fca51"
			android:onClick="onVideoBtn"
			android:textSize="24dp"
			android:layout_marginBottom="10dp"/>
	</LinearLayout>

</RelativeLayout>
